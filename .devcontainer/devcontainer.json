{
    "name": "Hang Man",
    "build": {
        "dockerfile": "../Dockerfile"
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.black-formatter",
        "ms-python.vscode-pylance",
        "ms-python.python",
        "ms-python.debugpy",
        "batisteo.vscode-django",
        "ms-azuretools.vscode-docker"
    ],
    "postCreateCommand": "python3 -m venv VenvHangMan && . VenvHangMan/bin/activate && pip install -r requirements.txt && python3 manage.py migrate",
    "remoteUser": "root",
        "portsAttributes": {
        "8000": {
            "label": "Django",
            "onAutoForward": "notify"
        }
    },
    "forwardPorts": [8000]
}
